{
  "manifest_version": 3,
  "name": "No History",
  "version": "1.0",
  "description": "Automatically clears your browsing and search history on a timer.",
  "permissions": ["browsingData", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
